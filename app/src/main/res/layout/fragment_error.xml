<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_error_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/view_error_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="40dip"
        app:srcCompat="@drawable/ic_camera" />

    <TextView
        android:id="@+id/view_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16.0sp"
        android:textColor="@color/cinza_escuro"
        android:gravity="center"
        android:layout_marginTop="36.0dip"
        android:lineSpacingExtra="8.0dip" />


    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/cinza"
        android:gravity="center"
        android:id="@+id/error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip" />

    <Button
        android:id="@+id/error_action"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33.0dip"
        android:minWidth="146.0dip"/>

</LinearLayout>